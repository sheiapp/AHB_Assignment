<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="splashScreenTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/splash_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/splash_text</item>
    </style>


    <style name="bannerTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/banner_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>